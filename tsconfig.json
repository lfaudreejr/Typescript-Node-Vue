{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "removeComments": true,
      "alwaysStrict": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/server/types/*"
          ]
      }
  },
  "lib": [
    "es5",
    "es6",
    "dom",
    "es2015.core",
    "es2015.collection",
    "es2015.generator",
    "es2015.iterable",
    "es2015.promise",
    "es2015.proxy",
    "es2015.reflect",
    "es2015.symbol",
    "es2015.symbol.wellknown",
    "esnext.asynciterable"
  ],
  "include": [
      "src/server/**/*"
  ],
  "exclude": [
      "node_modules",
      "dist",
      "src/client",
      "*.json"
]
}
